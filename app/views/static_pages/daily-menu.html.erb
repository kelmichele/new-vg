<% @page_title = "Lunch Menu" %>
<% @page_description = "Villaggio is open for lunch seven days a week. With so many delicious entrees, and a list of lunch specials to choose from, you'll be begging people to join you, just for an excuse to order more!" %>
<div id="menupage">
    <div id="page-title" class="pt-bkg-image image-menus">
        <div class="overlay">
            <div class="title-container less">
                <section class="fancy-heading center">
                    <h1>Lunch Menu</h1>
                    <h3>Served Daily, from 11 a.m. - 4 p.m.</h3>
                </section>
            </div>
        </div>
    </div>
    <div class="page-content food-menus">
        <section class="tabs-example">
            <div class="tabs">
                <div class="container no-padding">
                    <div class="col-md-8 col-md-offset-2 col-xs-12">
                        <div id="accordeon" class="col-md-12 no-padding">
                            <div class="cbp-item">
                                <div class="cbp-caption first">
                                    <div class="cbp-caption-defaultWrap">
                                        <h4>Salads &amp; Veggies</h4>
                                    </div>
                                    <div class="cbp-caption-activeWrap">
                                        <div class="cbp-l-caption-body">
                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Villaggio Salad <span> ... $6</span></h4>
                                                <p>Spring Mix, Grape Tomatoes, Sliced Onion, Parmesan &amp; Roasted Fig Vinaigrette</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Scallop or Tuna &amp; Arugula <span> ... $12</span></h4>
                                                <p>Seared Diver Scallops or Seared Tuna, Granny Smith Apples, Parmesan, Orange Supremes, Smoked Bacon Bits &amp; Balsamic Vinaigrette   </p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Spinach &amp; Wood Fired Chicken <span> ... $10</span></h4>
                                                <p>Baby Spinach, Red Onion, Tomatoes, Feta Cheese &amp; House Made Croutons with Warm Bacon Vinaigrette</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Goat Cheese <span> ... $8</span></h4>
                                                <p>Baby Field Greens, Dried Cherries, Spiced Walnuts &amp; Goat Cheese Crumbles with Roasted Fig Vinaigrette</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Beef or Shrimp &amp; Bleu <span> ... $12</span></h4>
                                                <p>Spring Mix, Shaved Red Onion, Spiced Walnuts, Ranch Dressing &amp; Bleu Cheese Crumbles</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="cbp-caption second">
                                    <div class="cbp-caption-defaultWrap">
                                        <h4>Sandwiches </h4>
                                    </div>
                                    <div class="cbp-caption-activeWrap">
                                        <div class="cbp-l-caption-body">
                                            <div class="menu-item">
                                                <h4>choice of House Made Chips or French Fries</h4>
                                            </div>
                                            <div class="menu-item">
                                                <h4>Italian Club <span> ... $9</span></h4>
                                                <p>Wood-Fired Chicken, Prosciutto, Roasted Red Pepper, Tomato, Field Greens &amp; Provolone with Garlic Aioli</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Villaggio Melt <span> ... $8</span></h4>
                                                <p>Roast Beef, Tavern Ham, Smoked Turkey, Tomato &amp; Field Greens with Dijon Mustard</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Fish Sandwich <span> ... $10</span></h4>
                                                <p>Fish of the Day, Lettuce, Tomato, Field Greens, Grilled Onions &amp; Sriracha Tartar Sauce on Focaccia</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Villaggio Burger <span> ... $9</span></h4>
                                                <p>Grilled Beef Burger, Seared Red Onion, Tomato, Field Greens &amp; Roasted Garlic Aioli<br>
                                                (choice of: Bleu Cheese, Provolone or Cheddar)</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Roasted Balsamic Portobello Wrap <span> ... $9</span></h4>
                                                <p>Romaine, Grilled Red Onion, Balsamic Red Peppers &amp; Feta</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>


                                <div class="cbp-caption third">
                                    <div class="cbp-caption-defaultWrap">
                                        <h4>Entrees</h4>
                                    </div>
                                    <div class="cbp-caption-activeWrap">
                                        <div class="cbp-l-caption-body">
                                            <div class="menu-item">
                                                <h4>Shrimp Carbonara <span> ... $12</span></h4>
                                                <p>Roasted Tomatoes, Cavatappi, Pancetta, Peas, Gouda Cream</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Traditional Lasagna <span> ... $10</span></h4>
                                                <p>Ground Beef &amp; Pork, Ricotta Cheese, Marinara, Tomato Cream</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Chicken Parmesan <span> ... $12</span></h4>
                                                <p>Fettuccini, Stuffed Breaded Chicken, Mozzarella, Marinara</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Grilled Sirloin Steak <span> ... $14</span></h4>
                                                <p>Gnocchi, Green Beans, Demi Glaze</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Seafood Pasta <span> ... $12</span></h4>
                                                <p>Gulf Shrimp, Scallops, Lump Crab Meat, Alfredo Cream Sauce</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Vegetable Plate  <span> ... $10</span></h4>
                                                <p>Grilled Eggplant, Roasted Red Peppers &amp; Squash Succotash</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Shrimp Scampi <span> ... $10</span></h4>
                                                <p>Stracci, Tomatoes, Peas, White Wine Butter Sauce</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4><%= image_tag( 'gluten.jpg', alt: 'Villaggio Grille Gluten Free Options', class: 'img-responsive') %> Fish of the Day <span> ... $10</span></h4>
                                                <p>Mushroom and Pea Risotto, Green Beans, Beurre Blanc</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Chicken Marsala <span> ... $10</span></h4>
                                                <p>Fettuccine, Mushrooms, Capers, Caramelized Onions, Marsala </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="cbp-caption fourth">
                                    <div class="cbp-caption-defaultWrap">
                                        <h4>Lunch Pizzas</h4>
                                    </div>
                                    <div class="cbp-caption-activeWrap">
                                        <div class="cbp-l-caption-body">
                                            <div class="menu-item">
                                                <h4>Lunch Price till 4pm Daily</h4>
                                            </div>
                                            <div class="menu-item">
                                                <h4>Margherita <span> ... $10</span></h4>
                                                <p>Mozzarella &amp; Provolone Cheese, Roasted Garlic, Tomatoes &amp; Fresh Basil with Roasted Tomato Marinara</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Villaggio <span> ... $12</span></h4>
                                                <p>Sausage, Pepperoni, Bell Peppers, Wild Mushrooms, Kalamata Olives, Mozzarella &amp; Oregano with Marinara</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Chicken Pesto <span> ... $10</span></h4>
                                                <p>Grilled Chicken, Roasted Tomatoes, Wild Mushrooms, Mozzarella &amp; Provolone with Basil Pesto</p>
                                            </div>

                                            <div class="menu-item">
                                                <h4>Shrimp and Crawfish <span> ... $12</span></h4>
                                                <p>Sautéed Shrimp and Crawfish with Tricolor Peppers &amp; Rockefeller Sauce</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%= render "shared/menu-share" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<div class="col-xs-12"><div class="hr hr-png-1"></div></div>
